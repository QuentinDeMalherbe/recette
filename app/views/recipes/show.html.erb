<h1><%= @recipe.name %></h1>
<p><%= @recipe.description %></p>
<p>Pour <%= current_user.preference.foyer %></p>
<p>Pour <%= @recipe.base_quantity  %> <%= @recipe.unit  %></p>

<div class="d-flex justify-content-between">
  <p>Complexité: <%= @recipe.complexity %></p>
  <p>Prix: <%= @recipe.price %></p>
</div>
<div class="d-flex justify-content-between">
  <p>Temps de préparation: <%= @recipe.prep_time %></p>
  <% if @recipe.cook_time != '' || @recipe.cook_time != nil%>
  <p>Temps de cuisson: <%= @recipe.cook_time %></p>
  <% end %>
</div>
<div class="card">
  <div class="card-header">
    Ingrédients:
  </div>

  <div class="row">
    <%  @recipe.quantities.each do |quantity|%>
    <div class="col-sm-6 ">
      <% if quantity.number != nil %>
      <p class=' mb-0  ml-4 '> <%= quantity.number * @recipe.ratio(current_user)%> <%= quantity.unit %> <%= quantity.ingredient.name %></p>
      <% else %>
      <p class=' mb-0  ml-4 '><%= quantity.ingredient.name %></p>
      <% end %>
    </div>
    <% end%>
  </div>

</div>
<div class="card">
  <div class="card-header">
    Etapes:
  </div>
  <ul class="list-group list-group-flush">
    <%  @recipe.steps.each do |step|%>
    <li class="list-group-item">
      <div class="d-flex justify-content-start align-items-center">
        <h2 class='mb-0 mr-3'><%= step.number %></h2>
        <p class='mb-0'><%= step.description %> </p>
      </div>
    </li>
    <% end%>
  </ul>
</div>
