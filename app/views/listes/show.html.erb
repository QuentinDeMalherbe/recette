<%= @liste.quantity %>
<% @liste.recipes.each do |recipe| %>
<%= link_to   recipe_path(recipe) , style: 'text-decoration:none' do %>
<div class="card mb-2">
  <h5 class="card-header"><%= recipe.name %></h5>
  <div class="card-body">
    <h5 class="card-title"><%= recipe.complexity %> </h5>
    <h5 class="card-title"><%= recipe.price %> </h5>
    <p class="card-text"> <%= recipe.description %></p>
  </div>
</div>
<% end %>
<% end %>

<%= button_to "Créer la liste d'ingrédient", liste_liste_ingredient_path(@liste), method: :post, class: 'btn btn-primary' %>
